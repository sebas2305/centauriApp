<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="my-3">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="my-3">
    <%= form.label :cellphone, style: "display: block" %>
    <%= form.text_field :cellphone , class:"form-control" %>
  </div>

  <div class="my-3">
    <%= form.label :company, style: "display: block" %>
    <%= form.text_field :company, class:"form-control" %>
  </div>

  <div class="my-3">
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content, class:"form-control" %>
  </div>

  <div class="my-3">
    <%= form.submit "Enviar solicitud", class:"btn btn-primary rounded-pill" %>
  </div>
<% end %>


